<!-- Wiki の Diff 表示 -->
<%
   if controller &&
      controller.class.name == 'WikiController' &&
      controller.action_name == 'diff' &&
      @project &&
      @project.module_enabled?(:wiki_diff_alternative) &&
      @diff.present?
%>
  <%= stylesheet_link_tag('scm') %>
<% end %> <!-- if -->

<!-- Wiki の Diff Preview 表示 -->
<%
